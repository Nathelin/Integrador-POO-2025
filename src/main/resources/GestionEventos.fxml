            <Label layoutX="693.0" layoutY="70.0" text="Fecha de fin" />
            <Button fx:id="btnAlta" layoutX="587.0" layoutY="465.0" mnemonicParsing="false" onAction="#onClickActivaAltaEvento" prefHeight="26.0" prefWidth="95.0" text="Alta" />

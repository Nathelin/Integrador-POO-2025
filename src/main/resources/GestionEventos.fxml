            <TextField fx:id="txtCupoMax" layoutX="165.0" layoutY="215.0" prefHeight="30.0" prefWidth="84.0" promptText="Cupo max" />
            <Label layoutX="148.0" layoutY="220.0" />
      </children>
    </AnchorPane>
  </children>
</VBox>
